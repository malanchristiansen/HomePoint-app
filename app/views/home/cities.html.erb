<section>
    <div class="container content">
        <div class="row">
            <% @listings.each do |post|%>
                <div class="col-md-4 col-lg-3 my-3 display: flex;">
                    <div class="card shadow-sm h-100">
                        <% if post.images && post.images.first %>
                            <%= image_tag post.images.first, class: "img-fluid img-card"%>
                        <% else %>
                            <%= image_tag "drone-placeholder.jpg", class: "img-fluid img-card"%>
                        <% end %>
                        <div class="card-body py-2">
                            <h6 class="card-title my-0">
                                <%= post.title%>
                            </h6>
                            <p class="card-text my-0">
                                $<%= post.price %>
                            </p>
                            <%= link_to 'View more', listing_path(post.id), class: "btn mt-1 btn-sm"%>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>
