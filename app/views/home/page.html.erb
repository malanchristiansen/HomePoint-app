<header>
    <div class="container-fluid landing-img d-flex align-items-center justify-content-center">
        <div class="text-center frontpage-text">
            <h1 class="display-1 mb-0">HomePoint</h1>
            <h2 class="display-4 mb-0">Marketplace for drone pilots</h2>
        </div>
    </div>
    <div class="headline-box">
        <h3 class="headline py-4 text-center">Find a beautiful variation of drone shots to decorate your living room or home office</h3>
    </div>
</header>

<section>
    <div class="container">
        <div class="row py-5 px-0 flex-wrap">
        <h1  class="headline-2">Beautiful Drone Photographs</h1>
            <div class="col-md-2">
                <div class="card">
                    <%= link_to drones_path do %>
                        <%= image_tag "all.jpg", class: "card-img img-fluid" %>
                        <h2 class="card-img-overlay">VIEW ALL</h2>
                    <% end %>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card">
                    <%= link_to cities_path do %>
                        <%= image_tag "cities.jpg", class: "card-img img-fluid" %>
                        <h2 class="card-img-overlay">CITIES</h2>
                    <% end %>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card">
                    <%= link_to nature_path do %>
                        <%= image_tag "nature.jpg", class: "card-img img-fluid" %>
                        <h2 class="card-img-overlay">NATURE</h2>
                    <% end %>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card">
                    <%= link_to ocean_path do %>
                        <%= image_tag "ocean.jpg", class: "card-img img-fluid" %>
                        <h2 class="card-img-overlay">OCEAN</h2>
                    <% end %>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card">
                    <%= link_to objects_path do %>
                        <%= image_tag "objects.jpg", class: "card-img img-fluid" %>
                        <h2 class="card-img-overlay">OBJECTS</h2>
                    <% end %>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card">
                    <%= link_to other_path do %>
                        <%= image_tag "beach.jpg", class: "card-img img-fluid" %>
                        <h2 class="card-img-overlay">OTHER</h2>
                    <% end %>
                </div>
            </div>
        </div>
</section>

<section>
    <div class="container content pb-5">
        <div class="row rounded landingpage-row d-flex align-items-center py-4">
        <div class="col-md-7 about-text">
            <h3><strong>About HomePoint</strong></h3>
            <p> &#10004; A great community for drone photographers and enthusiats to share and sell photographs</p>
            <p> &#10004; Browse through the marketplace and find the perfect shot.</p>
            <p> &#10004; Photographers can choose between selling the raw file, printed version, and framed printed version</p>
            <%= link_to 'View All', drones_path, class: "btn btn mt-2"%>
        </div>
        <div class="col">
            <div class="row d-flex align-items-center">
                <%= image_tag "drone-photographer.jpg", class: "landingpage-row-img img-fluid"%>
            </div>
        </div> 
    </div>
</section>


